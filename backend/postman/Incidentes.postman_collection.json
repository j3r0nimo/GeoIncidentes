{
  "info": {
    "_postman_id": "b2c8b0aa-1234-4f1a-9c01-geo001",
    "name": "GeoIncidentes API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "key",
        "value": "x-api-key",
        "type": "string"
      },
      {
        "key": "value",
        "value": "{{API_KEY}}",
        "type": "string"
      },
      {
        "key": "in",
        "value": "header",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Incidentes",
      "item": [
        {
          "name": "GET - All incidentes",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/incidentes",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "incidentes"]
            }
          }
        },
        {
          "name": "GET - Incidente by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/incidentes/{{id}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "incidentes", "{{id}}"]
            }
          }
        },
        {
          "name": "GET - jitter map data",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/incidentes/mapa/jitter",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "incidentes", "mapa", "jitter"]
            }
          }
        },
        {
          "name": "GET - pdf report",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/reports/incidentes/pdf?tipo=vuelco&medio=automovil",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "reports", "incidentes", "pdf"],
              "query": [
                {
                  "key": "tipo",
                  "value": "vuelco"
                },
                {
                  "key": "medio",
                  "value": "automovil"
                }
              ]
            }
          }
        },
        {
          "name": "POST - Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{LOGIN_USERNAME}}\",\n  \"password\": \"{{LOGIN_PASSWORD}}\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/login",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "id",
      "value": "6987422778790697a71b633e"
    }
  ]
}
